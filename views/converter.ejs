<html>
  <% include header %>

  <div class="container">
    <input type="text" id="btc" value="1" onkeyup="btcEuro();" onchange="btcEuro();"> =
    <input type="text" id="euro" value="<%= lastPrice%>" onkeyup="euroBtc();" onchange="euroBtc();">
  </div>

  <script>
    function btcEuro(){
      var market_price = <%= lastPrice %>;
      var btc_value = document.getElementById("btc").value;
      var calc = btc_value * market_price;
      document.getElementById("euro").value = calc.toFixed(2);
      console.log(calc);
    };

    function euroBtc(){
      var market_price = <%= lastPrice %>;
      var euro_value = document.getElementById("euro").value;
      var calc = euro_value / market_price;
      document.getElementById("btc").value = calc.toFixed(8);
      console.log(calc);
    };
  </script>

</html>
